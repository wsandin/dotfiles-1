keycode 172 =   XF86AudioPlay
keycode 164 =   XF86Favorites
keycode 180 =   XF86HomePage
keycode 163 =   XF86Mail
keycode 121 =   XF86AudioMute
keycode 234 =   XF86AudioMedia
keycode 165 =   XF86MyComputer
keycode 148 =   XF86Calculator
